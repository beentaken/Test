@{
    ViewBag.Title = "Check out";
}
<main>
    <h2>Checkout</h2>

    @if (Model.CartItem().Count == 0)
    {
        if (!string.IsNullOrEmpty(ViewBag.Message))
        {

            <p>@ViewBag.Message</p>

        }
        else
        {
            <p>Your cart is empty.</p>
        }
    }
    else
    {

        using (Html.BeginForm("CheckOutProduct", "CheckOutCart", new { carts = Model }, FormMethod.Post))
        {
            <table>
                <thead>
                    <tr>
                        <th>Product ID</th>
                        <th>Product Code</th>
                        <th>Product Name</th>
                        <th>Category</th>
                        <th>Quantity be buy</th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CartItem())
                    {
                        <tr>
                            <td>@item.Product.ProductID</td>
                            <td>@item.Product.ProductCode</td>
                            <td>@item.Product.ProductName</td>
                            <td>@item.Product.Category</td>
                            <td>@item.Quantity</td>
                            <td>@item.Product.Price</td>
                        </tr>
                    }
                </tbody>
            </table>

            <button type="submit" class="btn btn-primary">Checkout</button>
        }
        <strong>Total Price : @ViewBag.GetTotalPrice</strong>
        <strong>Item Count : @ViewBag.GetItemCount</strong>
        <strong>@ViewBag.Message</strong>



    }



